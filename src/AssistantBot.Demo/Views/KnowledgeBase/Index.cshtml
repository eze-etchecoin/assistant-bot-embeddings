@section Scripts{
    <script src="~/js/VueModels/KnowledgeBase/index.js"></script>
}

<div id="vueContainer" v-cloak>
    <form id="uploadFileForm">


        <div class="row">
            <h1>
                "Agregue Información Manualmente"
            </h1>
        </div>


        <div class="row">
            <div class="col-3">

                <p>Ingrese texto a guardar en base de conocimientos:</p>
                <textarea rows="7" v-model="Texto" class="text-input form-control"></textarea>

            </div>
        </div>


        <div v-if="isLoading" class="row">
            <div class="col-2">
                <div class="spinner-border" role="status">
                    <span class="sr-only"> </span>
                </div>
            </div>
        </div>


        <div v-if="AddParagraphErrorMessage" class="row">
            <div class="col-3">
                <div class="alert alert-danger alert-dismissible">

                    <button type="button" class="btn-close" aria-label="Close" v-on:click="hidenAlert"></button>

                    {{ AddParagraphErrorMessage }}

                </div>
            </div>
        </div>



        <div v-if="showingAlert" class="row">
            <div class="col-3">
                <div class="alert alert-success alert-dismissible">

                    <button type="button" class="btn-close" aria-label="Close" v-on:click="hidenAlert"></button>

                    El texto ha sido guardado con éxito

                </div>
            </div>
        </div>


        <div>
            <button type="button" v-on:click="guardar()" v-bind:disabled="buttonDisabled">Guardar</button>
        </div>


        <div class="row">

        </div>

        <div class="row">
            <h1>
                "Agregue Información a través de Archivos"
            </h1>
        </div>


        <div class="row">
            <div class="col-6 form-group">
                <label>Seleccione archivo para subir (sólo PDF/DOC/DOCX):</label>
                <input type="file" id="fileInput" class="form-control-file" v-on:change="checkFileSelected" />
            </div>
        </div>


        <div class="row">
            <div class="col-2 d-flex align-items-center">
                <button type="button" class="btn btn-primary" v-on:click="uploadFile" v-bind:disabled="DisabledUploadButton">
                    Subir
                </button>
                <div class="ms-3">
                    <div class="spinner-border text-primary" role="status" v-if="ShowsUploadSpinner">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <div class="row" v-if="CurrentProcessFileName">
        <div class="col-4">
            <div class="progress">
                <div class="progress-bar" role="progressbar" v-bind:style="ProgressBarStyle" v-bind:aria-valuenow="CurrentProgress" aria-valuemin="0" aria-valuemax="100">
                    {{CurrentProgress}}%
                </div>
            </div>
        </div>
    </div>

    <div class="row" v-if="UploadFileErrorMessage">
        <div class="col-4">
            <div class="alert alert-danger alert-dismissible">
                {{UploadFileErrorMessage}}
                <button type="button" class="btn-close" aria-label="Close" v-on:click="ErrorMessage = ''">
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="alert alert-info">
                <span v-if="!LastUploadedFileInfo">No hay información del último archivo subido.</span>
                <span v-else>
                    Último archivo subido: <br />
                    <strong>
                        {{ LastUploadedFileInfo.FileName }}  
                        <span v-if="CurrentProcessFileName && CurrentProgress < 100">(procesando)</span>
                    </strong>
                    <br/>
                    {{ FormattedLastUploadedFileDateTime }}
                </span>
            </div>
        </div>
    </div>

