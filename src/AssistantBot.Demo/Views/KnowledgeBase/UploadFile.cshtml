@section Scripts{
    <script src="~/js/VueModels/KnowledgeBase/UploadFile.js"></script>
}

<div id="vueContainer">
    <form id="uploadFileForm">
        <div class="row">
            <div class="col-6 form-group">
                <label for="fileInput">Seleccione archivo para subir (sólo PDF/DOC/DOCX):</label>
                <input type="file" id="fileInput" class="form-control-file" />
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <button type="button" class="btn btn-primary" v-on:click="uploadFile" @*v-bind:disabled="DisabledUploadButton"*@>
                    Subir
                </button>
                <div class="spinner-border text-primary" role="status" v-if="ShowsUploadSpinner">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </form>

    <div class="row" v-if="CurrentProcessFileName">
        <div class="col-4">
            <div class="progress">
                <div class="progress-bar" role="progressbar" v-bind:style="ProgressBarStyle" v-bind:aria-valuenow="CurrentProgress" aria-valuemin="0" aria-valuemax="100">
                    {{CurrentProgress}}%
                </div>
            </div>
        </div>
    </div>

    <div class="row" v-if="ErrorMessage">
        <div class="col-4">
            <div class="alert alert-danger alert-dismissible">
                {{ErrorMessage}}
                <button type="button" class="btn-close" aria-label="Close" v-on:click="ErrorMessage = ''">
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="alert alert-info">
                <span v-if="!LastUploadedFileInfo">No hay información del último archivo subido.</span>
                <span v-else>
                    Último archivo subido: 
                    <strong>{{ LastUploadedFileInfo.FileName }} - {{ LastUploadedFileInfo.UploadedDateTime }}</strong>
                </span>
            </div>
        </div>
    </div>

