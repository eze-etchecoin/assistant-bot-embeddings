@section Scripts{
    <script src="~/js/VueModels/Query/Index.js"></script>
}



<div id="vueContainer">

    <div class="row">
        <div class="col-3">
            <p>Enter your question:</p>
            <textarea rows="7" v-model="Texto" class="text-input form-control"></textarea>
        </div>
    </div>
    
    <div v-if="isLoading" class="row">
        <div class="col-2">
            <div class="spinner-border" role="status">
                <span class="sr-only"> </span>
            </div>
        </div>
    </div>

    <div>
        <button v-on:click="consultar" v-bind:disabled="isButtonDisabled">Consultar</button>
    </div>

    <div v-if="mostrarRespuesta" class="row">
        <div class="col-3">
            <br />
            
            <div class="alert alert-info alert-dismissible">
                <p><strong><u>Pregunta:</u></strong></p>
                <p>{{ textoIngresado }}</p>
                <p><strong><u>Respuesta:</u></strong></p>
                <p>{{ textoRespuesta }}</p>
                <button type="button" class="btn-close" aria-label="Close" v-on:click="closeAlert"></button>
            </div>
        </div>
    </div>

    <div v-if="alertError" class="row">
        <div class="col-3">
            <br />

            <div class="alert alert-danger alert-dismissible">
                <p><strong>Failed to get response from API</strong></p>
                <button type="button" class="btn-close" aria-label="Close" v-on:click="closeAlertError"></button>
            </div>
        </div>
    </div>
    
    


    
</div>
